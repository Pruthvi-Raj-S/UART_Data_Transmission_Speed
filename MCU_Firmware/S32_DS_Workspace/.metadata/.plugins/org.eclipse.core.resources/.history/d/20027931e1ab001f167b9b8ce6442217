#ifndef INC_MCU_CONFIG_H_
#define INC_MCU_CONFIG_H_

/******************************************************************************
*							INCLUDES
******************************************************************************/

/******************************************************************************
*							MACRO DEFINITION
******************************************************************************/

/*=============================================<EEPROM>===================================================*/
/* Base address of EEPROM sector */
#define M_EEPROM_BASEADD					(uint32)(&m_EEPROM_start)

/* Size occupied in flash by one EEPROM parameter in bytes */
#define M_EEPROMPARAM_SIZE					(uint32)4U

/* Macro to get starting address of a EEPROM parameter from index */
#define M_EEPROMPARAM_ADD(x)				(uint32)(M_EEPROM_BASEADD + ((uint32)(M_EEPROMPARAM_SIZE * (x))))

/* Macro to get value of a EEPROM parameter from index */
#define M_BINPARAM_VAL(x)				(*((uint32*)(M_BINPARAM_ADD(x))))

#endif /* INC_MCU_CONFIG_H_ */
